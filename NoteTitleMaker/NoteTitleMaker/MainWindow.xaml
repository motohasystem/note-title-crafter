<Window x:Class="NoteTitleMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="noteタイトル画像メーカー" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="noteタイトル画像メーカー" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Controls Panel -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- Title Text -->
                    <GroupBox Header="タイトルテキスト" Margin="0,5">
                        <TextBox x:Name="TitleText" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True" 
                                Height="80"
                                VerticalScrollBarVisibility="Auto"
                                TextChanged="OnControlChanged"/>
                    </GroupBox>
                    
                    <!-- Font Size -->
                    <GroupBox Header="フォントサイズ" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="FontSizeSlider" 
                                   Grid.Column="0"
                                   Minimum="20" Maximum="150" Value="60"
                                   ValueChanged="OnControlChanged"/>
                            <TextBlock Grid.Column="1" 
                                      Text="{Binding ElementName=FontSizeSlider, Path=Value, StringFormat={}{0:0}px}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Font Color -->
                    <GroupBox Header="文字色" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="FontColorButton" 
                                   Grid.Column="0"
                                   Width="50" Height="30"
                                   Background="White"
                                   Click="FontColorButton_Click"/>
                            <TextBox x:Name="FontColorHex" 
                                    Grid.Column="1"
                                    Text="#FFFFFF"
                                    TextChanged="FontColorHex_TextChanged"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Border Color -->
                    <GroupBox Header="枠の色" Margin="0,5">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BorderColorButton" 
                                       Grid.Column="0"
                                       Width="50" Height="30"
                                       Background="Black"
                                       Click="BorderColorButton_Click"/>
                                <TextBox x:Name="BorderColorHex" 
                                        Grid.Column="1"
                                        Text="#000000"
                                        TextChanged="BorderColorHex_TextChanged"/>
                            </Grid>
                            <TextBlock Text="文字色を選ぶと自動で補色になります" 
                                      FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Border Width -->
                    <GroupBox Header="枠の太さ" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="BorderWidthSlider" 
                                   Grid.Column="0"
                                   Minimum="0" Maximum="50" Value="0"
                                   ValueChanged="OnControlChanged"/>
                            <TextBlock Grid.Column="1" 
                                      Text="{Binding ElementName=BorderWidthSlider, Path=Value, StringFormat={}{0:0}px}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Text Position -->
                    <GroupBox Header="文字位置" Margin="0,5">
                        <ComboBox x:Name="TextPositionCombo" 
                                 SelectedIndex="0"
                                 SelectionChanged="OnControlChanged">
                            <ComboBoxItem>中央</ComboBoxItem>
                            <ComboBoxItem>上</ComboBoxItem>
                            <ComboBoxItem>下</ComboBoxItem>
                        </ComboBox>
                    </GroupBox>
                    
                    <!-- Text Effects -->
                    <GroupBox Header="文字効果" Margin="0,5">
                        <StackPanel>
                            <CheckBox x:Name="TextShadowCheck" 
                                     Content="影をつける" 
                                     IsChecked="True"
                                     Checked="OnControlChanged"
                                     Unchecked="OnControlChanged"/>
                            <CheckBox x:Name="TextBackgroundCheck" 
                                     Content="文字に背景をつける"
                                     Checked="OnControlChanged"
                                     Unchecked="OnControlChanged"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Text Padding -->
                    <GroupBox Header="文字背景の余白" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="TextPaddingSlider" 
                                   Grid.Column="0"
                                   Minimum="5" Maximum="50" Value="20"
                                   ValueChanged="OnControlChanged"/>
                            <TextBlock Grid.Column="1" 
                                      Text="{Binding ElementName=TextPaddingSlider, Path=Value, StringFormat={}{0:0}px}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Preview Area -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Upload Section -->
                <Border Grid.Row="0" 
                       BorderBrush="LightGray" 
                       BorderThickness="2" 
                       CornerRadius="5"
                       Margin="0,0,0,10">
                    <StackPanel>
                        <Button x:Name="UploadButton" 
                               Content="画像をアップロード" 
                               HorizontalAlignment="Center"
                               Padding="20,10"
                               Click="UploadButton_Click"/>
                        <TextBlock Text="または、画像をドラッグ＆ドロップ / Ctrl+V で貼り付け" 
                                  HorizontalAlignment="Center" 
                                  Foreground="Gray"
                                  Margin="5"/>
                    </StackPanel>
                </Border>
                
                <!-- Canvas Container -->
                <Border Grid.Row="1" 
                       BorderBrush="LightGray" 
                       BorderThickness="1"
                       Background="#F0F0F0">
                    <Grid>
                        <Image x:Name="PreviewImage" 
                              Stretch="Uniform"
                              MouseLeftButtonDown="PreviewImage_MouseDown"
                              MouseMove="PreviewImage_MouseMove"
                              MouseLeftButtonUp="PreviewImage_MouseUp"
                              MouseLeave="PreviewImage_MouseLeave"/>
                        <TextBlock x:Name="NoImageMessage" 
                                  Text="画像をアップロードしてください" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  FontSize="16" 
                                  Foreground="Gray"/>
                    </Grid>
                </Border>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0">
                    <Button x:Name="DownloadButton" 
                           Content="画像をダウンロード" 
                           IsEnabled="False"
                           Click="DownloadButton_Click"/>
                    <Button x:Name="CopyImageButton" 
                           Content="画像をコピー" 
                           IsEnabled="False"
                           Click="CopyImageButton_Click"/>
                    <Button x:Name="CopyUrlButton" 
                           Content="設定を保存" 
                           Click="CopyUrlButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>